<h2>Gestión de Productos</h2>
<a href="/products/new" class="btn btn-primary mb-3">Crear Nuevo Producto</a>

{{#if products}}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Imagen</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>
                        {{#if imagen}}
                            <img src="/uploads/{{imagen}}" alt="{{nombre}}" width="50" height="50" style="object-fit: cover;">
                        {{else}}
                                                    {{/if}}
                    </td>
                    <td>{{nombre}}</td>
                    <td>${{precio}}</td>
                    <td>
                        <a href="/products/edit/{{_id}}" class="btn btn-sm btn-warning">Editar</a>
                        <form action="/products/delete/{{_id}}" method="POST" style="display: inline;" onsubmit="return confirm('¿Estás seguro de eliminar este producto?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
{{else}}
    <div class="alert alert-info">No hay productos registrados.</div>
{{/if}}
